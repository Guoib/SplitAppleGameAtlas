{
  "compilerOptions": {
    "target": "ES6", // 指定编译后的 JavaScript 版本
    "module": "NodeNext", // 指定模块系统
    "lib": [
      "ES6",
      "DOM"
    ], // 指定要包含的库
    "outDir": "./dist", // 指定编译输出的目录
    "rootDir": "./src", // 指定源代码的根目录
    "esModuleInterop": true, // 支持 ES 模块和 CommonJS 模块的互操作性
    "skipLibCheck": true, // 跳过对类型声明文件的检查
    "forceConsistentCasingInFileNames": true, // 强制文件名大小写一致
  },
  "include": [
    "src/**/*.ts"
  ], // 指定要编译的文件或目录
}